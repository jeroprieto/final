<h3>Add a New User</h3>

<div class="row">
  <div class="col-md-5">

    <p><%= @message %></p>

    <%= form_tag "/users", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "username", "Choose a username:" %>
        <%= text_field_tag "username", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password", "Password" %>
        <%= password_field_tag "password", "", "class" => "form-control" %>

      </div>

      <div class="form-group">
        <%= label_tag "name", "What's your name?" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <%= submit_tag "Add This User", "class" => "btn btn-default btn-sm" %> or <%= link_to "Cancel", "/" %>

    </form>
</div>
</div>
