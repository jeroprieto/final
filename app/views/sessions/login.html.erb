<h3>Sign In</h3>

<div class="row">
  <%= form_tag "/authenticate", "class" => "col-md-5" do  %>

    <div class="form-group">
      <%= label_tag "username" %>
      <%= text_field_tag "username", "", "class" => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag "password" %>
      <%= password_field_tag "password", "", "class" => "form-control" %>
    </div>

    <%= submit_tag "Sign In", "class" => "btn btn-default btn-sm" %>

  <% end %>
</div>
